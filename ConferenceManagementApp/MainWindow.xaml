<Window x:Class="ConferenceManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConferenceManagementApp"
        mc:Ignorable="d"   
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Background="#FFDC3333">
            <!-- Tab for adding/editing conferences -->
            <TabItem Header="Конференция">
                <StackPanel>
                    <TextBox x:Name="conferenceNameTextBox" Width="300" Height="69" Text="Название конференции"/>
                    <DatePicker x:Name="conferenceDatePicker" Margin="10" Width="300" Height="80"/>
                    <TextBox x:Name="conferenceLocationTextBox" Margin="10" Width="300" Height="67" Text="Местопроведение конференции"/>
                    <Button x:Name="saveConferenceButton" Content="Сохранить концеренцию" Click="SaveConferenceButton_Click" Margin="10" Width="300" Height="30"/>
                    <Label x:Name="conferenceErrorLabel" Width="300"/>
                </StackPanel>
            </TabItem>

            <!-- Tab for adding new participants -->
            <TabItem Header="Ученые">
                <StackPanel>
                    <TextBox x:Name="fullNameTextBox" Margin="10" Width="300" Height="76" Text="ФИО ученного"/>
                    <TextBox x:Name="countryTextBox" Margin="10" Width="300" Height="70" Text="Город" />
                    <ComboBox x:Name="degreeComboBox" Margin="10" Width="300" Height="30" SelectedIndex="0">
                        <ComboBoxItem Content="профессор"/>
                        <ComboBoxItem Content="академик"/>
                        <ComboBoxItem Content="доктор"/>
                    </ComboBox>
                    <Button x:Name="saveParticipantButton" Content="Сохранить ученного" Click="SaveParticipantButton_Click" Margin="10" Width="300" Height="30"/>
                    <Label  x:Name="errorLabel" Width="300"/>
                </StackPanel>
            </TabItem>

            <!-- Tab for searching conferences by participant -->
            <TabItem Header="Поиск">
                <StackPanel>
                    <TextBox x:Name="fullNameSearchTextBox" Margin="10" Width="300" Height="79" Text="ФИО ученного"/>
                    <Button x:Name="searchButton" Content="Поиск" Click="SearchButton_Click" Margin="10" Width="300" Height="30"/>
                    <Label x:Name="searchErrorLabel"></Label>
                    <DataGrid x:Name="searchResultsDataGrid" Margin="10" Height="300" AutoGenerateColumns="True"/>
                </StackPanel>
            </TabItem>

            <!-- Tab for analyzing popularity of researchers -->
            <TabItem Header="Анализ">
                <StackPanel>
                    <DataGrid x:Name="analysisResultsDataGrid" Margin="10" Height="385" AutoGenerateColumns="True"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Участники">
                <StackPanel>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ученный" Margin="5"/>
                            <ListBox x:Name="researchersListBox" Width="380" Height="250" DisplayMemberPath="FullName" Margin="5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Конференция" Margin="5"/>
                            <ListBox x:Name="conferencesListBox" Width="383" Height="250" DisplayMemberPath="Name"/>
                        </StackPanel>
                    </Grid>
                    <TextBox x:Name="topicTextBox" Margin="10" Width="300" Height="30" Text="Тема"/>
                    <Button Content="Добавить участие" Click="AddParticipationButton_Click" Margin="10" Width="300" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
